@page
@model JustBrewIt.Pages.BreweryModel
@{
    var MyBreweryAPI = (QuickType.Welcome[])ViewData["MyBreweryAPI"];
}
@{
    if (MyBreweryAPI.Any())
    {
        foreach (QuickType.Welcome welcome in MyBreweryAPI)
        {   <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Brewery Type</th>
                        <th scope="col">Phone</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@welcome.Name</td>
                        <td>@welcome.BreweryType</td>
                        <td>@welcome.Phone</td>
                    </tr>
                </tbody>
            </table>
        }
    }
    else
    {
        <div class="alert-danger">No results found</div>
    }
}
